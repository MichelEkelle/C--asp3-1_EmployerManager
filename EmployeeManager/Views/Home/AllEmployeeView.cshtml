@model AllEmployeeViewModel;

@{
    // permet d'inscrire cette vue a l"utilisation de Layout
    // Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    ViewBag.PageTitle = "All Employee Details";
   
}



<div class="card-deck">
    @foreach (var employee in Model.EmployeeListModel)
    {
        string nomImage = employee.Photopath;
        //string nomImage = "image3.png";

    <div class="card m-3 " style="min-width: 18rem; max-width: 30.5%; max-height: 50%; min-height:40%">
        <div class="card-header">
            <h5 > @employee.Name</h5>
        </div>
        
        <div class="container text-center" style="width:50%; height:50%;" > 
            <img class="card-img" src="~/images/@nomImage" asp-append-version="true" />
        </div>
        
        <div class="card-footer text-center m-1 ">
            <a asp-controller="home" asp-action="EmployeeView" asp-route-id="@employee.Id" class="btn btn-primary m-1 ">
                View
            </a>
          
            <a asp-controller="home" asp-action="EmployeeEditView" asp-route-id="@employee.Id" class="btn btn-primary m-1 ">
                Edit
            </a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    </div>
     }

</div>



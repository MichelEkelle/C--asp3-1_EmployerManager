@model CreateEmployeeViewModel;

@{
    // permet d'inscrire cette vue a l"utilisation de Layout
    //  Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    ViewBag.PageTitle = "Create Employee ";
}

<div asp-validation-summary="All" class="text-danger">

</div>
<form enctype="multipart/form-data" asp-controller="home" asp-action="CreateEmployeeView" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="EmployeeModel.Name"></label>
        <div class="col-sm-10">
            <input asp-for="EmployeeModel.Name" />
            <span asp-validation-for="EmployeeModel.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EmployeeModel.Email"></label>
        <div class="col-sm-10">
            <input asp-for="EmployeeModel.Email" />
            <span asp-validation-for="EmployeeModel.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EmployeeModel.Department"></label>
        <div class="col-sm-10">
            <select asp-for="EmployeeModel.Department" asp-items="Html.GetEnumSelectList<DeptEnum>()">
                <option value=""> Please Select</option>
            </select>
            <span asp-validation-for="EmployeeModel.Department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success" id="createBtnnn">Create</button>
        </div>
    </div>

    @section Script
    {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>

    }

</form>
